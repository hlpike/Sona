<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HubActivity">

    <TextView
        android:id="@+id/hub_welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="342dp"
        android:layout_marginBottom="310dp"
        android:letterSpacing="0"
        android:text="@string/high_there"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3376BC"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hub_info2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="#81ADC8"
        android:text="@string/info"
        android:textColor="#AFE059"
        app:layout_constraintWidth_percent=".33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/hub_home2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="#81ADC8"
        android:text="@string/home"
        android:textColor="#AFE059"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".33" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="user image"
        app:layout_constraintBottom_toTopOf="@+id/hub_welcome2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <Button
        android:id="@+id/hub_profile2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:background="#81ADC8"
        android:text="@string/profile"
        android:textColor="#AFE059"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hub_info2"
        app:layout_constraintStart_toEndOf="@+id/hub_home2" />

    <Button
        android:id="@+id/hub_about_day2"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:background="#afe059"
        android:fontFamily="sans-serif"
        android:text="@string/feeling"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>